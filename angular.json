{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"myrtex-mf": {
			"projectType": "application",
			"schematics": {
				"@schematics/angular:component": {
					"style": "less"
				}
			},
			"root": "",
			"sourceRoot": "src",
			"prefix": "app",
			"architect": {
				"build": {
					"builder": "ngx-build-plus:browser",
					"options": {
						"outputPath": "dist/myrtex-mf",
						"index": "src/index.html",
						"polyfills": [
							"zone.js"
						],
            "allowedCommonJsDependencies": [
              "air-datepicker/locale/en",
              "air-datepicker/locale/ru",
              "dayjs",
              "dayjs/plugin/customParseFormat",
              "dayjs/plugin/timezone",
              "dayjs/plugin/utc",
              "google-libphonenumber"
            ],
						"tsConfig": "tsconfig.app.json",
						"inlineStyleLanguage": "less",
						"assets": [
							"src/favicon.ico",
							"src/assets"
						],
						"styles": [
							"src/styles.less",
              "node_modules/jodit/es2021/jodit.min.css"
						],
						"scripts": [],
						"main": "src/main.ts",
						"extraWebpackConfig": "webpack.config.js",
						"commonChunk": false
					},
					"configurations": {
						"production": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "500kb",
									"maximumError": "1mb"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "2kb",
									"maximumError": "4kb"
								}
							],
							"outputHashing": "all",
							"extraWebpackConfig": "webpack.prod.config.js"
						},
						"development": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "ngx-build-plus:dev-server",
					"configurations": {
						"production": {
							"buildTarget": "myrtex-mf:build:production",
							"extraWebpackConfig": "webpack.prod.config.js"
						},
						"development": {
							"buildTarget": "myrtex-mf:build:development"
						}
					},
					"defaultConfiguration": "development",
					"options": {
						"port": 4200,
						"publicHost": "http://localhost:4200",
						"extraWebpackConfig": "webpack.config.js"
					}
				},
				"extract-i18n": {
					"builder": "ngx-build-plus:extract-i18n",
					"options": {
						"buildTarget": "myrtex-mf:build",
						"extraWebpackConfig": "webpack.config.js"
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"polyfills": [
							"zone.js",
							"zone.js/testing"
						],
						"tsConfig": "tsconfig.spec.json",
						"inlineStyleLanguage": "less",
						"assets": [
							"src/favicon.ico",
							"src/assets"
						],
						"styles": [
							"src/styles.less"
						],
						"scripts": []
					}
				}
			}
		},
    "auth-lib": {
      "projectType": "library",
      "root": "projects/auth-lib",
      "sourceRoot": "projects/auth-lib/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/auth-lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/auth-lib/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/auth-lib/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/auth-lib/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        }
      }
    }
	},
	"cli": {
		"analytics": false
	}
}
